- project ||= small_suggestion
%li.clear{ id: "suggestion_#{project.url_name}" }
  .stack_right
    %a.btn.btn-mini.btn-primary.command.stack_add{ href: '#', id: "stackit_#{project.url_name}" }
      = t('stacks.small_suggestion.i_use_this')
    %span.separator -
    %a.btn.btn-mini.btn-warning.command.ignore{ href: '#', id: "stackit_#{project.url_name}" }
      = t('stacks.small_suggestion.skip_this')
  - project_link(project, :small, style: 'float: left;')
  .title
    %h6.nomargin.no_margin_top
      %a{ href: project_url(project), title: project.name }= truncate(project.name, length: 35)
  %p.description.nomargin= truncate(project.description, length: 55)
