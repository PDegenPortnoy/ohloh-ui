%h4{ style: 'margin-bottom: .3em;' } Quick Reference
%dl.dl-horizontal.unstyled
  - if @project.organization
    %dt= t('.organization')
    %dd{ style: 'margin-bottom: .5em;' }
      = link_to @project.organization.name, organization_path(@project.organization)
  %dt
    = link_to t('.proj_links'), project_links_path(@project)
  %dd{ style: 'margin-bottom: .5em;' }
    - if @project.decorate.sorted_link_list.any?
      - @project.decorate.sorted_link_list.each do |link_category_name, links|
        - if links.size > 1
          = link_to project_links_path(@project) do
            = link_category_name
            %i= t('.no_of_links', count: links.size)
        - elsif links.size == 1
          - link_opts = link_category_name == 'Homepage' ?  { itemprop: 'url' } : {}
          = link_to links.first.url, link_opts do
            %i.icon-external-link
            = link_category_name
        %br
    - else
      = link_to t('.add_proj_links'), project_links_path(@project)
  %dt
    = link_to t('.code_locations'), project_enlistments_path(@project)
  %dd{ style: 'margin-bottom: .5em;' }
    - enlistments = @project.enlistments
    - if enlistments.present?
      - if enlistments.size > 1
        %i= link_to t('.n_locations', n: enlistments.size), project_enlistments_path(@project)
      - else
        = enlistments.first.repository.url.truncate(35)
      %br
    - else
      = link_to t('.add_code_location'), project_enlistments_path(@project)
  %dt
    = link_to t('.licenses'), project_licenses_path(@project)
  %dd{ style: 'margin-bottom: .5em;' }
    - licenses = @project.licenses
    - if licenses.size > 0
      %span{ itemscope: '', itemtype: 'http://schema.org/CreativeWork' }
        %span{ itemprop: 'publishingPrinciples' }
          = licenses.collect { |l| link_to html_escape(l.short_name), license_url(l.to_param) }.to_sentence.html_safe
    - else
      = t('.no_license')
  %dt
    = link_to t('.similar_projects'), similar_project_path(@project)
  %dd{ style: 'margin-bottom: .5em;' }
    #similar_projects{ data: { project_id: @project.to_param } }
    .hidden#related_spinner= image_tag('spinner.gif')
  %dt
    = link_to t('.managers'), project_managers_path(@project)
  %dd{ style: 'margin-bottom: .5em;' }
    - if @project.active_managers.present?
      != project_managers_list
    - else
      = link_to t('.become_first', what: @project.name), new_project_manager_path(@project)
- if @project.koders_status.try(:ohloh_code_ready) == true
  - ohloh_code_url = "http://code.openhub.net/project?pid=&ipid=#{@project.koders_status.koders_id}"
  %a.btn.btn-info.browse_code_button{ href: ohloh_code_url,
                                      title: t('.browse_the_source', what: @project.name),
                                      target: '_blank' }
    = t('.browse_code')
